			\qrcode[nolink,%
			height=\bibqrcodesize]{\strfield{urlraw}}%
		}%
			%\marginpar{\vskip\qrcode[nolink,height=1.5cm]{\strfield{urlraw}}}%
		%\marginnote{\qrcode[nolink,height=\bibqrcodesize]{\strfield{urlraw}}}%
	}
}
